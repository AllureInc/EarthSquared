<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>    
		<referenceBlock name="shipping_address">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Earthsquared_Customize::order/create/form/address.phtml</argument>
            </action>
            <arguments>
                <argument name="customerAddressFormatter" xsi:type="object">Magento\Sales\ViewModel\Customer\AddressFormatter</argument>
                <argument name="customerAddressCollection" xsi:type="object">Magento\Customer\Model\ResourceModel\Address\Collection</argument>
            </arguments>            
        </referenceBlock>
		<referenceBlock name="billing_address">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Earthsquared_Customize::order/create/form/address.phtml</argument>
            </action>
            <arguments>
                <argument name="customerAddressFormatter" xsi:type="object">Magento\Sales\ViewModel\Customer\AddressFormatter</argument>
                <argument name="customerAddressCollection" xsi:type="object">Magento\Customer\Model\ResourceModel\Address\Collection</argument>
            </arguments>           
        </referenceBlock>  
    </body>
</page>
